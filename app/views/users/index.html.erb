<h1>Users</h1>
<br />

<div class="row">
  <div class="span6">
	
<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user, {:class => "btn btn-small"} %></td>
    <td><%= link_to 'Edit', edit_user_path(user), {:class => "btn btn-small"} %></td>
    <td><%= link_to 'Destroy', user, {:class => "btn btn-small"}, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

</div>
</div>


